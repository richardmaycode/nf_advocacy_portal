

<%= tag.div class: "bg-sky-500 h-screen" do %>
  <%= tag.div class: "flex justify-center align-center items-center h-screen md:w-1/2 lg:w-1/3 w-10/12 mx-auto" do %>


<div id="clearance" class="sign-up bg-white p-12 rounded-2xl w-full">
  <h2 class="text-2xl text-center font-semibold"><%= t(".title") %></h2>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="submit-field py-4">
      <%= form.submit class: "py-4 px-8 bg-sky-400 rounded-md text-white w-full" %>
    </div>

    <div class="other-links">
      <%= tag.p do %>
      Already have an account, 
      <%= link_to t(".sign_in"), sign_in_path, class: "underline text-sky-400" %>
      <% end %>
    </div>
  <% end %>
</div>
  <% end %>
<% end %>