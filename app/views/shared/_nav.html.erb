<%= tag.nav class: "h-16 border border-gray-200 bg-gray-50 dark:bg-gray-700 dark:border-gray-600" do %>
  <%= tag.div class: "py-4 px-16 flex justify-between items-center" do %>
    <%= link_to "#" do %>
      <%= tag.h1 "NF Advocacy Portal", class: "dark:text-white text-gray-500 text-2xl" %>
    <% end %>
    <%= tag.div do %>
      <%= link_to "Login", sign_in_path, class: "text-gray-500 dark:text-white rounded-md border-2 border-gray-600 dark:border-white px-8 py-2 hover:bg-white hover:text-black ease-in duration-300" unless signed_in? %>

      <%= tag.div class: "flex flex-col center-items" do %>
        <%= tag.p current_user.email %>
        <% tag.p "Advocate" %>
      <% end if signed_in? %>
    <% end %>
  <% end %>
<% end %>